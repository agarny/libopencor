export function expectIssues(expectedIssues, logger) {
  expect(logger.issueCount()).toBe(expectedIssues.length);

  for (let i = 0; i < expectedIssues.length; ++i) {
    expect(logger.issue(i).type().value).toBe(expectedIssues[i][0].value);
    expect(logger.issue(i).description()).toBe(expectedIssues[i][1]);
  }
}

export function allocateMemory(module, arrayBuffer) {
  const memPtr = module._malloc(arrayBuffer.length);
  const mem = new Uint8Array(module.HEAPU8.buffer, memPtr, arrayBuffer.length);

  mem.set(arrayBuffer);

  return memPtr;
}

export function freeMemory(module, memPtr) {
  module._free(memPtr);
}

function stringToArrayBuffer(string) {
  const encoder = new TextEncoder();

  return encoder.encode(string);
}
