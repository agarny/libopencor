{
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "formatter": {
    "includes": [
      "**/*.css",
      "**/*.html",
      "**/*.js",
      "**/*.json",
      "!**/*.min.css",
      "!build/**",
      "!doc/**",
      "!extern/**",
      "!prebuilt/**"
    ],
    "indentStyle": "space",
    "lineWidth": 120
  },
  "css": {
    "formatter": {
      "enabled": true
    }
  },
  "html": {
    "formatter": {
      "bracketSameLine": true,
      "enabled": true,
      "selfCloseVoidElements": "always",
      "whitespaceSensitivity": "ignore"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none"
    }
  },
  "linter": {
    "includes": ["**/*.css", "**/*.js", "!**/*.min.css"]
  },
  "overrides": [
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "complexity": {
            "noImportantStyles": "off"
          }
        }
      }
    }
  ]
}
